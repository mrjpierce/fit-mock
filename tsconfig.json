{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "out",
    "sourceMap": true,
    "inlineSources": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "lib": ["es2015", "esnext.asynciterable"]
  },
  "exclude": ["node_modules", "out", "coverage"],
  "include": ["src/**/*"]
}
